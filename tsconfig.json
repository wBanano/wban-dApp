{
  "compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es5", "es6"],
    "module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
		"declaration": true,
		"paths": {
      "@/*": [
        "./frontend/src/*"
			],
			"@artifacts/*": [
				"./artifacts/*"
			]
    },
	},
	"include": [
		"artifacts/typechain/*"
	],
	"exclude": [
		"node_modules",
	]
}
