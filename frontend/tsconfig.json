{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",

		"skipLibCheck": true,
		"allowJs": true,
		"resolveJsonModule": true,

    "types": [
      "webpack-env",
			"jest",
			"node",
			"cypress", "@testing-library/cypress",
    ],
    "paths": {
      "@/*": [
        "src/*"
			],
			"@artifacts/*": [
				"../artifacts/*"
			]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
	"vueCompilerOptions": {
		"target": 2,
	},
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
		"tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
