{
   "name": "wban-smart-contract",
   "version": "0.2.0",
   "description": "dApp for swapping BAN to wBAN on Binance Smart Chain",
   "author": "Jérôme Bernard <jerome.bernard@gmail.com>",
   "license": "GPL-3.0-or-later",
   "main": "dist/index.js",
   "types": "dist/index.d.ts",
   "repository": {
      "type": "git",
      "url": "https://github.com/wBanano/wban-bep20"
   },
   "keywords": [
      "Banano",
      "Wrapped Token",
      "Binance Smart Chain",
      "bsc"
   ],
   "files": [
      "contracts",
      "dist"
   ],
   "engines": {
      "node": ">=10"
   },
   "devDependencies": {
      "@nomiclabs/hardhat-ethers": "^2.0.2",
      "@nomiclabs/hardhat-solhint": "^2.0.0",
      "@nomiclabs/hardhat-solpp": "^2.0.0",
      "@nomiclabs/hardhat-waffle": "^2.0.1",
			"@openzeppelin/contracts": "^3.4.1",
      "@typechain/ethers-v5": "^6.0.5",
      "@types/chai": "^4.2.15",
      "@types/mocha": "^8.2.2",
      "@types/node": "^14.14.37",
      "chai": "^4.3.4",
      "copyfiles": "^2.4.1",
      "dotenv": "^8.2.0",
      "ethereum-waffle": "^3.3.0",
      "ethers": "^5.0.26",
      "hardhat": "^2.1.2",
      "hardhat-deploy": "^0.7.0-beta.57",
      "hardhat-deploy-ethers": "^0.3.0-beta.7",
      "hardhat-gas-reporter": "^1.0.4",
      "hardhat-log-remover": "^2.0.0",
      "hardhat-preprocessor": "^0.1.2",
      "hardhat-spdx-license-identifier": "^2.0.3",
      "hardhat-typechain": "^0.3.5",
      "mocha": "^8.3.2",
      "prettier": "^2.2.1",
      "rimraf": "^3.0.0",
      "solidity-coverage": "^0.7.16",
      "ts-generator": "^0.1.1",
      "ts-node": "^9.1.1",
      "typechain": "^4.0.1",
      "typescript": "^4.1.3"
   },
   "resolutions": {
      "@nomiclabs/hardhat-solhint/solhint": "^3.3.2"
   },
   "scripts": {
      "clean": "rimraf ./artifacts/ ./flatten/ ./coverage/ ./coverage.json ./cache/ ./dist",
      "precompile": "yarn clean",
      "compile": "yarn hardhat compile && yarn tsc",
      "postcompile": "copyfiles -u 2 \"artifacts/typechain/**/*.d.ts\" dist",
      "pretest": "yarn compile",
      "test": "yarn hardhat test",
      "prepublishOnly": "yarn test",
      "preflatten": "yarn compile",
      "flatten": "npx hardhat flatten > dist/WBANToken-flattened.sol",
      "check": "yarn hardhat check",
      "coverage": "yarn hardhat coverage",
      "node:watch": "yarn hardhat node --watch",
      "deploy:devnet": "yarn hardhat deploy --network bscdevnet --gasprice 20000000000",
      "deploy:testnet": "yarn hardhat deploy --network bsctestnet --gasprice 20000000000"
   }
}
